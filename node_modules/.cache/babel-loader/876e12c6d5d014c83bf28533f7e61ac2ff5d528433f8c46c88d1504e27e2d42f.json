  <el-button\r\n          type=\"warning\"\r\n          :icon=\"todoObj.isImportance ? 'el-icon-star-on' : 'el-icon-star-off'\"\r\n          circle\r\n          ref=\"buttonIco\"\r\n          @click=\"changeWeight(todoObj)\"\r\n        ></el-button>\r\n      </div>\r\n      <el-button type=\"primary\" @click=\"edit(todoObj)\">编辑</el-button>\r\n      <el-button type=\"danger\" @click=\"todoDeleted(todoObj)\">删除</el-button>\r\n\r\n      <el-button\r\n        @click=\"drawer = true\"\r\n        type=\"primary\"\r\n        style=\"margin-left: 16px\"\r\n      >\r\n        点我打开\r\n      </el-button>\r\n      <el-drawer title=\"我是标题\" :visible.sync=\"drawer\" :with-header=\"false\">\r\n        <!-- 这里面可以进行其他功能的嵌套，非常不错 -->\r\n        <input type=\"text\">\r\n        <span>我来啦!</span>\r\n\r\n\r\n      </el-drawer>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { mapMutations } from \"vuex\";\r\nexport default {\r\n  name: \"todoItem\",\r\n  props: [\"todoObj\"],\r\n  data() {\r\n    return {\r\n      drawer: false,\r\n    };\r\n  },\r\n  methods: {\r\n    //通过map方法结构之后，可以直接通过this.进行访问\r\n    ...mapMutations(\"todolist\", [\r\n      \"EDIT\",\r\n      \"ALTER\",\r\n      \"DELETE\",\r\n      \"ALTERCHECKBOX\",\r\n      \"CHANGEWEIGHT\",\r\n    ]),\r\n    edit(todoObj) {\r\n      this.EDIT(todoObj);\r\n      this.$nextTick(function () {\r\n        this.$refs.inputBox.focus();\r\n      });\r\n    },\r\n    handerBlur(todoObj, e) {\r\n      todoObj.isEdit = false;\r\n      if (!e.target.value.trim()) {\r\n        alert(\"输入不能为空\");\r\n        return;\r\n      }\r\n      todoObj.todoThing.title = e.target.value;\r\n      this.ALTER(todoObj);\r\n    },\r\n    todoDeleted(todoObj) {\r\n      if (confirm(\"确定删除该\" + todoObj.todoThing.title + \"吗?\")) {\r\n        this.DELETE(todoObj);\r\n      }\r\n    },\r\n    changeWeight(todoObj) {\r\n      this.CHANGEWEIGHT(todoObj);\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.todoItem {\r\n  position: re